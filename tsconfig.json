{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "alwaysStrict": true,
    },
    "include": [
        "src/**/*"
      ],
      "exclude": [
        "node_modules"
      ]
    
  }
  